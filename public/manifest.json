{
  "manifest_version": 3,
  "name": "Gladiatus Healthy Game",
  "version": "1.3.8",
  "description": "Conjunto de herramientas para gladiatus.",
  "icons": {
    "16": "icons/icon_16.png",
    "32": "icons/icon_32.png",
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Gladiatus Healthy Game",
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "activeTab"],
  "web_accessible_resources": [
    {
      "resources": [ "/*" ],
      "use_dynamic_url": true
    }
  ],

  "content_scripts": [
    {
      "matches": ["https://*.gladiatus.gameforge.com/game/index.php*"],
      "run_at": "document_idle",
      "js": ["contentScript.js","fontawesome/js/all.min.js"],
      "css": ["styles.css","fontawesome/css/all.min.css"]
    }
  ]
}
